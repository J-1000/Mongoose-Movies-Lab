{{#with celebrities}}
<form action="/celebrities/{{_id}}/edit" method="POST">
    <label for="add-name">Name</label>
    <input type="text" name="name" id="add-name" value="{{name}}">
    <label for="add-occupation">Occupation</label>
    <input type="text" name="occupation" id="add-occupation" value="{{occupation}}">
    <label for="add-catchphrase">Catch Phrase</label>
    <input type="text" name="catchPhrase" id="add-catchphrase" value="{{catchPhrase}}">
    <button type="submit">EDIT</button>

</form>
{{/with}}