<h2>Edit the celebrity</h2>
{{#with edit}}
<form action="/celebrities/{{this._id}}" method="POST">
    <label for="name">Name</label>
    <input type=" text" id="name" name="name" value="{{this.name}}">
    <label for="occupation">Occupation</label>
    <input type="text" id="occupation" name="occupation" value="{{this.occupation}}">
    <label for="catchphrase">Catchphrase</label>
    <input type="text" id="catchphrase" name="catchphrase" value="{{this.catchphrase}}">
    <button type="submit">Edit celebrity</button>
</form>
{{/with}}