<h2>Celebrities</h2>
{{#each celebrities}}
<p>
    <a href="celebrities/{{this._id}}">{{this.name}}</a>
    <form action="/celebrities/{{this._id}}/delete" method="post">
        <button type="submit">DELETE</button>
    </form>
    <form action="celebrities/{{this._id}}/edit" method="get">
        <button type="submit">EDIT</button>
    </form>
</p>
{{/each}}

<a href="celebrities/new">Add new celebrity</a>