<form action="/movies" method="POST">
    <label for="add-title">Title</label>
    <input type="text" name="title" id="add-title">
    <label for="add-genre">Genre</label>
    <input type="text" name="genre" id="add-genre">
    <label for="add-plot">Plot</label>
    <input type="text" name="plot" id="add-plot">

    <select name="cast" id="" multiple>
        {{#each celebrities}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>
    <button type="submit">ADD</button>
</form>