<h2>Add Movie</h2>
<form action="/movies" method="POST">
    <input type="text" name="title">
    <input type="text" name="genre">
    <input type="text" name="plot">

    <select name="cast" multiple>
      {{#each celeb}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>

    <button type="submit">Add</button>
</form>


