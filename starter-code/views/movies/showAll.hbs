{{#each movie}}
  <li>
    <h2>{{this.title}}</h2>
    <div>{{this.plot}}</div>
    <div>cast :
      {{#each this.cast}}
        {{this.name}}
      {{/each}}
    </div>
    <form action="movies/{{_id}}/delete" method="post">
      <h2><a href="movies/{{_id}}">{{this.title}}</a></h2>

      <button type="submit"> Delete </button>
    </form>
  </li>
{{/each}}