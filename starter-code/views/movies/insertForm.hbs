<h2>New Movie</h2>
<form action="/Movies" method="post">
  <label>
    title:
    <input type="text" name="title" />
  </label>
  <label>
    plot
    <input type="text" name="plot" />
  </label>
  <label>
    cast
  </label>
  <select name="cast" multiple>
    {{#each celebrities}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <button type="submit">Create</button>
</form>