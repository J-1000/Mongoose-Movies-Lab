<h2>edit Movie Page</h2>

<form action="/movies/{{detail.id}}" method="post">
  <label for="">Title:</label>
  <input type="text" name="title" value = "{{detail.title}}"> 

  <label for="">Genre:</label>
  <input type="text" name="genre" value = "{{detail.genre}}">

  <label for="">Plot:</label>
  <input type="text" name="plot" value = "{{detail.plot}}">

    <select name="cast" multiple>
    {{#each celebrities}}
   
    <option value="{{this._id}}" selected>{{this.name}} </option>
   
    {{/each}}
    </select>

  <button type="submit">Edit</button>
</form>