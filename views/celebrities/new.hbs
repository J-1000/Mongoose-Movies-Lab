<h2>Add a New Celebrity</h2>

{{!-- the url of action should be same as POST --}}
<form action="/celebrities" method="POST">
	<label for="name">Name: </label>
	<input type="text" id="id-name" name="name" required>

	<label for="occupation">Occupation: </label>
	<input type="text" id="id-occupation" name="occupation" required>

	<label for="catchPhrase">Catch Phrase: </label>
	<input type="text" id="id-catchPhrase" name="catchPhrase" required>


	<button type="submit">Add the Celebrity</button>
</form>