<h1>Celebrities</h1>

{{#each celebrities}}
    <a href="/celebrities/{{_id}}">
        <h2>{{name}}</h2>
    </a>
    
    <p><u>{{occupation}}</u></p>
    <p><i>{{catchPhrase}}</i></p> 
    <form action="/celebrities/{{_id}}/delete" method="post">
        <button>Delete Celebrity</button> 
    </form> 
    <br>
    <a href="/celebrities/{{_id}}/edit">Edit {{name}}</a> 
    <br><br><br>
{{/each}}

<br><br>
<a href="/celebrities/new"><button>Add a new celebrity</button></a> 
