<h2>Celebrities</h2>
<a href="/celebrities/new">Add a new Celebrity</a>
{{#each celebritiesList}}

<a href="celebrities/{{_id}}">
    <h3>{{name}}</h3>
</a>
<form action="/celebrities/{{_id}}/delete" method="POST">
    <button type="submit">Delete this celebrity</button>
</form>

<a href="/celebrities/edit/{{_id}}">
    <button type="submit">Edit this celebrity</button>
</a>

{{/each}}