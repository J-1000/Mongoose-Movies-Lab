{{#with celeb}}
  <h2>Edit info about {{name}}</h2>
  <form action='/celebrities/{{_id}}' method='POST'>
    <label for='name'>Name:</label>
    <input type='text' name='name' id='name' value='{{name}}' />
    <br />
    <br />
    <label for='occupation'>Occupation:</label>
    <input
      type='text'
      name='occupation'
      id='occupation'
      value='{{occupation}}'
    />
    <br />
    <br />
    <label for='catchPhrase'>Catchphrase:</label>
    <input
      type='text'
      name='catchPhrase'
      id='catchPhrase'
      value='{{catchPhrase}}'
    />
    <br />
    <br />
    <button type='submit'>Submit</button>
  </form>
{{/with}}