<h2>Edit the movie {{details.title}} </h2>
<form action="/movies/edit/{{details._id}}" method="POST">
    <label for="title">Title: </label>
    <input type="text" id="title" name="title" value="{{details.title}}">

    <label for="gengre">Gengre: </label>
    <input type="text" id="genre" name="gengre" value="{{details.gengre}}">

    <label for="plot">Plot: </label>
    <input type="text" id="plot" name="plot" value="{{details.plot}}">

    <label for="cast">Cast: </label>
    <select name="cast" multiple>
        {{#each details.cast}}
        <option value="{{_id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <button type="submit">Edit this Movie</button>

</form>