<h2>Edit the movie</h2>
{{!-- this should be the link from route.post --}}
<form action="/movies/{{movie.id}}/edit" method="post">
    <label for="title">Title: </label>
    <input type="text" value="{{movie.title}}" name="title">

    <label for="genre">Genre: </label>
    <input type="text" value="{{movie.genre}}" name="genre">

    <label for="plot">Plot: </label>
    <input type="text" value="{{movie.plot}}" name="plot">


    {{#each celebrity}}
    <input type="checkbox" id={{name}} name="cast" value={{_id}}>
    <label for={{name}}>{{name}}</label>
    {{/each}}
   

    <button type="submit">Edit the movie</button>
</form>