<h1>Add a movie</h1>
<form action="/movies" method="POST">
  <label for="title">Title: </label>
  <input type="text" id="title" name="title" />

  <label for="genre">Genre: </label>
  <input type="text" id="genre" name="genre" />

  <label for="plot">plot: </label>
  <input type="text" id="plot" name="plot" />

  {{! <label for="catchPhrase">CatchPhrase: </label>
  <input type="text" id="catchPhrase" name="catchPhrase" /> }}
  <select name="cast" multiple>
    {{! <option value="1">Han Solo</option>
		<option value="2">Boba Fett</option>
		<option value="3" selected>Bib Fortuna</option> }}
    {{#each celebrities}}
      <option value="{{_id}}" selected>{{name}}</option>
    {{/each}}
  </select>

  <button type="submit">Add new movie</button>
</form>