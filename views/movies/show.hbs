
    {{#with movie}}
        <div>
            {{!-- display the title, genre and plot for every movie --}}
            <h2>Details for {{title}}:</h2>
            <p>Genre: {{genre}}</p>
            <p>Plot: {{plot}}</p>
            {{#if cast}}
            <p>Cast:</p>
                <ul>
                {{#each cast}}
                     <li>{{this.name}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </div>
    {{/with}}
    <a href="/celebrities"><button>Back</button></a>

